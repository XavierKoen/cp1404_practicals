BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34.0'
            font_size: 48
            on_text: app.handle_calculate(input_number.text)
        BoxLayout
            orientation: 'vertical'
            size_hint_x: None
            width: 100
            Button:
                id: add_one
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                id: subtract_one
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: 'Convert miles to kilometres'
#        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
