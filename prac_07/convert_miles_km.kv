BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            size_hint: 1, 1
            text: '34.0'
            font_size: 48
            multiline: False
        BoxLayout
            orientation: 'vertical'
            size_hint_x: None
            width: 100
            Button:
                id: add_one
                text: 'Up'
                on_press: app.handle_increment(float(input_number.text), 1)
            Button:
                id: subtract_one
                text: 'Down'
                on_press: app.handle_increment(float(input_number.text), -1)
    Button:
        text: 'Convert miles to kilometres'
        on_press: app.handle_calculate(float(input_number.text))
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
